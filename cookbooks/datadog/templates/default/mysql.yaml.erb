instances:
<% @instances.each do |i| -%>
  - server: <%= i['server'] %>
    user: <%= i['user'] %>
    pass: <%= i['pass'] %>
    <% if i.key?('sock') -%>
    sock: <%= i['sock'] %>
    <% end -%>
  <% if i.key?('tags') -%>
    tags:
    <% i['tags'].each do |t| -%>
    - <%= t %>
    <% end -%>
  <% end -%>
  <% if i.key?('options') -%>
    options:
    <% i['options'].each do |o| -%>
      <%= o %>
    <% end -%>
  <% end -%>
<% end -%>

# Nothing to configure here
init_config:
