instances:
<% @instances.each do |i| -%>
  - varnishstat: <%= i["varnishstat"] || "/usr/bin/varnishstat" %>
  <% if i.key?("name") -%>
    name: <%= i["name"] %>
  <% end -%>
  <% if i.key?("tags") -%>
    tags:
    <% i["tags"].each do |t| -%>
    -  <%= t %>
    <% end -%>
  <% end -%>
<% end -%>

