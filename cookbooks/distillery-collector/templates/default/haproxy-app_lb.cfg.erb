global
  log 127.0.0.1   local0
  #log loghost    local0 info
  maxconn <%= node['haproxy']['global_max_connections'] %>
  #debug
  #quiet
  user <%= node['haproxy']['user'] %>
  group <%= node['haproxy']['group'] %>
  ulimit-n  <%= node['haproxy']['ulimit-n'] %>
  <%= node['haproxy']['daemon'] == true ? 'daemon' : '' %>

defaults
  log     global
  mode    http
  retries 3
  <% @defaults_timeouts.sort.map do | value, time | -%>
  timeout <%= value %> <%= time %>
  <% end -%>
  <% @defaults_options.sort.each do | option | -%>
  option <%= option %>
  <% end -%>
  balance  <%= node['haproxy']['balance_algorithm'] %>
  <% if node['haproxy']['stats'] %>
  stats uri <%= node['haproxy']['stats']['uri'] %>
  stats auth <%= node['haproxy']['stats']['auth'] %>
  <% end %>

# Set up application listeners here.

<% if node['haproxy']['use_listeners'] == true %>
  <% listeners = node['haproxy']['listeners'] || [] %>
  <% listeners.each do |listener| %>
listen <%= listener['name'] %> <%= listener['bind_location'] %>
  <% if node['haproxy']['enable_ssl'] && listener['ssl_enabled'] %>
    bind <%= listener['bind_location'] %> ssl crt <%= ::File.join(node['ssl']['certs_dir'], 'distillery.wistia.com.crt') %>
  <% end %>
    balance <%= listener['balance'] %>
    <% listener_options = listener['options'] || [] %>
    <% listener_options.each do |o| %>
      option <%= o %>
    <% end %>
    <% additional_headers = listener['additional_headers'] || [] %>
    <% additional_headers.each do |h| %>
      reqadd <%= h['key'] %>:\ <%= h['value'] %>
    <% end %>
    <% servers = listener['servers'] || [] %>
    <% servers.each do |s| %>
      server <%= s['name'] %> <%= s['ip'] %>:<%= s['port'] %> weight <%= s['weight'] %> maxconn <%= s['maxconn'] %> check

    <% end %>
  <% end %>
<% else %>

frontend http
  maxconn <%= node['haproxy']['frontend_max_connections'] %>
  bind <%= node['haproxy']['incoming_address'] %>:<%= node['haproxy']['incoming_port'] %>
  <%= node['haproxy']['enable_ssl'] ? "bind #{node['haproxy']['ssl_incoming_address']}:#{node['haproxy']['ssl_incoming_port']} ssl crt #{::File.join(node['ssl']['certs_dir'], 'distillery.wistia.com.crt')} no-sslv3 ciphers RC4-SHA:AES128-SHA:AES256-SHA" : '' %>
  default_backend servers-http

backend servers-http
  <% node['haproxy']['backends'].each do |member| -%>
  server <%= member['hostname'] %> <%= member['ipaddress'] %>:<%= member['port'] %> weight 1 maxconn <%= node['haproxy']['member_max_connections'] %> check
  <% end -%>
  option forwardfor except 127.0.0.1
  <% if node['haproxy']['httpchk'] -%>
  option httpchk <%= node['haproxy']['httpchk'] %>
  <% end -%>

<% end %>
